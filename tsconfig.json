{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./built",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "moduleResolution": "Node",
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
  ]
}